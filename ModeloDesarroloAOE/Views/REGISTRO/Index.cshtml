@model IEnumerable<ModeloDesarroloAOE.REGISTRO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p></p>
<p>
    @Html.ActionLink("Añadir registro", "Create", new { area = "" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Fecha de Ingreso
        </th>
        <th>
            Venta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FEC_INGR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VENTAS.IDVENTAS)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDREGISTRO }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IDREGISTRO }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
