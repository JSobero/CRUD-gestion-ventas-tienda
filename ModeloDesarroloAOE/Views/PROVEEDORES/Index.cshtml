@model IEnumerable<ModeloDesarroloAOE.PROVEEDORES>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p></p>
<p>
    @Html.ActionLink("Añadir proveedor", "Create", new { area = "" }, new {@class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            Nombre del proveedor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RUC)
        </th>
        <th>
            Direccion
        </th>
        <th>
            Correo
        </th>
        <th>
            Telefono
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RUC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIRECCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CORREO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TELEFONO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDPROVEEDORES }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IDPROVEEDORES }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
